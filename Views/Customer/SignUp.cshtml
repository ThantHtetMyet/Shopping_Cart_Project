

@model GetFreshFood.Models.Customer
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_GetFreshFoodLayout.cshtml";
}
                    <div class="row" style="padding-top:5%;">
                        <div class="row text-center">
                            <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:30px;">
                                <div class="sign_up_heading_div" id="sign_up_heading_div">
                                    <b>
                                        <label class="sign_up_heading" id="sign_up_heading">
                                            SignUp Inform!
                                        </label>
                                    </b>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-sm-2 col-md-2 col-lg-2 col-xs-2"></div>
                            <div class="col-sm-8 col-md-8 col-lg-8 col-xs-8 text-center">
                                <section id="loginForm">
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.TextBox("firstname_bx", null, new { @class = "form-control", placeholder = "FirstName", required = "required", @style = "padding-right:0px;border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.TextBox("lastname_bx", null, new { @class = "form-control", placeholder = "LastName", required = "required", @style = "border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                            <input type="email" id="email_bx" class="form-control" placeholder="Email" pattern="^[a-zA-Z0-9._+-]+&#64;[a-zA-Z0-9.-]+\.[a-zA-Z]{2,9}$" style="border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;">

                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.Password("password_bx", null, new { @class = "form-control", placeholder = "Password", required = "required", @style = "padding-right:0px;border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.Password("confirm_password_bx", null, new { @class = "form-control", placeholder = "Confirm Password", required = "required", @style = "border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.TextBox("phone_bx", null, new { @type = "number", @class = "form-control", placeholder = "Phone", required = "required", @style = "padding-right:0px;border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                        <div class="col-sm-6 col-xs-6 col-md-6 col-lg-6">
                                            @Html.Password("birthday_bx", null, new { @type = "date", @class = "form-control datepicker", placeholder = "Confirm Password", required = "required", @style = "border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                            @Html.TextBox("address_bx", null, new { @class = "form-control", placeholder = "Address", required = "required", @style = "border: none;border-bottom:1px solid #000000;border-radius:0;-webkit-box-shadow: none;box-shadow: none;background: transparent;max-width:100%;" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                            <label id="term_accept_lb"></label>
                                            <input type="checkbox" class="terms_check_bx" id="terms_check_bx" />
                                            @Html.Label("Terms and Conditions",new { @class="term_label",@style="color:black;"})
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row text-center">
                                        <div class="col-sm-6- col-xs-6 col-md-6 col-lg-6">
                                            <button class="btn btn-default" id="sign_up_button" type="submit" style="float:right;background-color:cornflowerblue;color:white;" onclick="customer_signup()" data-toggle="popover" data-placement="top" title="Registered User!" data-content="Pls! SignIn.">Signup</button>
                                        </div>
                                        <div class="col-sm-6- col-xs-6 col-md-6 col-lg-6" style="text-align:left;">
                                            <a href="@Url.Action("Index", "Home")"  role="button" class="btn btn-default">
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="col-sm-2 col-md-2 col-lg-2 col-xs-2"></div>
                        </div>
                    </div>
<br />
                    <div class="row text-center">
                        <i style="align-content:center;">@@copy.right.nus.edu.mm</i>
                    </div>